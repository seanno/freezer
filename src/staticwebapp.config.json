{
    "routes": [ 
        {
            "route": "/.auth/login/aad",
            "allowedRoles": [ "anonymous", "authenticated" ]
        },{
            "route": "/.auth/*",
            "statusCode": 404
        },{
            "route": "/index.html",
            "allowedRoles": [ "contributor" ]
        },{
            "route": "/",
            "rewrite": "/index.html",
            "allowedRoles": [ "contributor" ]
        },{
            "route": "/*",
            "allowedRoles": [ "contributor" ]
        }
    ],
    "responseOverrides": {
        "401": { 
            "statusCode": 302,
            "redirect": "/.auth/login/aad"
        },
        "403": { 
            "statusCode": 302,
            "redirect": "/.auth/login/aad"
        }
    }
}
